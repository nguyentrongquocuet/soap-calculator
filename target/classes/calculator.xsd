<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://quoc.com/soap-calculator"
           elementFormDefault="qualified">

    <xs:element name="calculatorRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="input1" type="xs:string" />
                <xs:element name="operation" type="xs:string" />
                <xs:element name="input2" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="calculatorResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="result" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>